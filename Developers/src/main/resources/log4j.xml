<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-mm-dd HH:mm:ss}] %-5p %l - %m%n" /> <!-- %-5p: %c - %m%n -->
		</layout>
		<!-- simpleLayout -->
		<!-- <layout class="org.apache.log4j.SimpleLayout"/> -->
		<!-- HTMLLayout -->
		<!-- <layout class="org.apache.log4j.HTMLLayout"/> -->
		<!-- XMLLayout -->
		<!-- <layout class="org.apache.log4j.xml.XMLLayout"/> -->
	</appender>
	<appender class="org.apache.log4j.DailyRollingFileAppender" name="fileLogger">
		<param name="file" value="C://Users//user2//log//spring.log"/>
		<param name="Append" value="true"/>
		<param name="dataPattern" value=".yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %l - %m%n"/>
		</layout>
	</appender>
	<!--  DB로그를 출력하기 위한 appender등록  -->
	<appender name="sqlLogger" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %m%n"/>
		</layout>
	</appender>
	<!--  실행하는 sql구문을 출력하는것  -->
	<logger name="jdbc.sqlonly" additivity="false">
		<level value="info"/>
		<appender-ref ref="sqlLogger"/>
	</logger>
	<!--  실행된 결과를 테이블 형식으로 출력하는것  -->
	<logger name="jdbc.resultsettable" additivity="false">
		<level value="info"/>
		<appender-ref ref="sqlLogger"/>
	</logger>
	
	<!-- Application Loggers -->
	<logger name="com.kh.developers">
		<level value="debug" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="defug" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
		<appender-ref ref="fileLogger"/>
	</root>
	
</log4j:configuration>
